<!-- Shopping Cart Section Begin -->
@{
    var priceWithService = (Model.TotalPrice / 100) * 110;
}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Table No: @Model.TableNo</h2>
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MenuList)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.Name</h6>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" value="0">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@item.piece.ToString()</td>
                                    <td class="cart__close"><i class="fa fa-close"></i></td>
                                </tr>
                            }

                            @*<tr>
                        <td class="product__cart__item">
                            <div class="product__cart__item__pic">
                                <img src="~/basket/img/shopping-cart/cart-2.jpg" alt="">
                            </div>
                            <div class="product__cart__item__text">
                                <h6>Diagonal Textured Cap</h6>
                                <h5>$98.49</h5>
                            </div>
                        </td>
                        <td class="quantity__item">
                            <div class="quantity">
                                <div class="pro-qty-2">
                                    <input type="text" value="1">
                                </div>
                            </div>
                        </td>
                        <td class="cart__price">$ 32.50</td>
                        <td class="cart__close"><i class="fa fa-close"></i></td>
                    </tr>*@

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span>$ @Model.TotalPrice</span></li>
                        <partial>with service price %10</partial>
                        <li>Total <span>$ @priceWithService </span></li>
                    </ul>
                    <a asp-controller="Order" asp-action="PayItem" asp-route-id="@Model.Id" class="btn btn-primary">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>

