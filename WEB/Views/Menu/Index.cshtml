@{
    ViewData["Title"] = "Menu Page";
}
@model List<Menu>
<!-- Menu Section -->
<div class="w3-row w3-padding-64" id="menu">
    <div class="w3-col l6 w3-padding-large">
        <div class="col-lg-9">
            <div class="shop__product__option">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="right">
                            <p>Masa No:</p>
                            <form form asp-controller="Menu" asp-action="TableNo" method="post">
                                <select id="selectTable" name="table" onchange="this.form.submit()">
                                    <option value=1>Masa 1</option>
                                    <option value=2>Masa 2</option>
                                    <option value=3>Masa 3</option>
                                    <option value=4>Masa 4</option>
                                    <option value=5>Masa 5</option>
                                    <option value=6>Masa 6</option>
                                    <option value=7>Masa 7</option>
                                    <option value=8>Masa 8</option>
                                    <option value=9>Masa 9</option>
                                    <option value=10>Masa 10</option>
                                </select>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <h1 class="w3-center">Our Menu</h1><br>

            @foreach (var item in Model)
            {
                <h4>@item.Name</h4>
                <p class="w3-text-grey">...</p>
                <a asp-controller="Order" asp-action="AddItem" asp-route-id="@item.Id" class="btn btn-primary">Add to basket</a>
                <h4 class="card-title">Price:@item.UnitInPrice  TL</h4>
                <br>
            }

            @*<h4>Belgian Waffle</h4>
                <p class="w3-text-grey">Vanilla flavored batter with malted flour 7.50</p><br>

                <h4>Scrambled eggs</h4>
                <p class="w3-text-grey">Scrambled eggs, roasted red pepper and garlic, with green onions 7.50</p><br>

                <h4>Blueberry Pancakes</h4>
                <p class="w3-text-grey">With syrup, butter and lots of berries 8.50</p>*@
        </div>

        <div class="w3-col l6 w3-padding-large">
            <img src="/w3images/tablesetting.jpg" class="w3-round w3-image w3-opacity-min" alt="Menu" style="width:100%">
        </div>
    </div>
</div>