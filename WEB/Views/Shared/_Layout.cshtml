<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotCat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEB.styles.css" asp-append-version="true" />

    <!-- Css Styles -->

    <link rel="stylesheet" href="~/basket/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/basket/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/basket/css/slicknav.min.css" type="text/css">
    @*<link rel="stylesheet" href="~/basket/css/style.css" type="text/css">*@
</head>

<header>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        body {
            font-family: "Times New Roman", Georgia, Serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Playfair Display";
            letter-spacing: 5px;
        }
    </style>
</header>
<!-- Navbar (sit on top) -->


<body>
    <header class="w3-panel w3-center w3-opacity" style="padding:28px 3px">
        @*<h1 class="w3-xlarge">WELCOME</h1>
            <h1>HotCat Cafe</h1>*@

        <div class="w3-padding-32">
            <div class="w3-bar w3-border">
                <a href="/" class="w3-bar-item w3-button w3-light-grey">Home</a>
                <a href="/about" class="w3-bar-item w3-button w3-light-grey">About</a>
                <a href="/menu" class="w3-bar-item w3-button w3-light-grey">Menu</a>
                <a href="/order" class="w3-bar-item w3-button w3-light-grey w3-hide-small">Order</a>
                <a href="/contact" class="w3-bar-item w3-button w3-light-grey">Contact</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/login" class="w3-bar-item w3-button w3-light-grey">Login</a>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/login/logout" class="w3-bar-item w3-button w3-light-grey">Logout</a>
                }
            </div>
        </div>
    </header>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    @*<script src="~/js/jquery-3.6.3.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/js.cookie.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(() => {
            var CookieValue = Cookies.get('table') 
            if (CookieValue == 0) { CookieValue = 1 }
            $("#selectTable").val(CookieValue);
        });
    </script>
</body>





</html>
